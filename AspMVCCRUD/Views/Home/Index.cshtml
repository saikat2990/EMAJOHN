@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
       
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/one.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
        <div class="item">
            <img src="~/images/two.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div  class="row">
    <div align="center" class="col-md-4">
        <button style="padding:5%;margin:3%;background:aqua;text-decoration:none;" class="btn btn-primary" >@Html.ActionLink("Sign In","LogIn","Users",null, new { style = "text-decoration:none" })</button>
        
    </div>
    <div align="center" class="col-md-4">
        <button style="padding:5%;margin:3%;background:aqua;text-decoration-color:black" class="btn btn-primary">@Html.ActionLink("Sign Up", "Create", "Users", null, new { style = "text-decoration:none" })</button>
        

    </div>
    <div align="center" class="col-md-4">
        <button  style="padding:5%;margin:3%;background:aqua;" class="btn btn-primary">View Products</button>
        
    </div>
    
</div>
